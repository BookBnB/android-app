<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_normal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.login.EmailSentFragment">

    <ImageView
        android:layout_width="308dp"
        android:layout_height="229dp"
        android:src="@drawable/email_sent_img" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="Email de recuperación enviado" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:text="Se le envió un email a la casilla de correo electrónico indicada. Siga los pasos indicados en el mismo para recuperar su contraseña." />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:text="¿No recibió un email? Revise su carpeta de 'Spam' o 'No deseados'." />

</LinearLayout>